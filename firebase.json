{
  "hosting": {
    "site": "csitba",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/hackitba",
        "destination": "https://hackitba.web.app/",
        "type": 301
      },
      {
        "source": "/hackitba/**",
        "destination": "https://hackitba.web.app/:splat",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ 
      {
        "source": "**/*.@(jpg|jpeg|gif|png|js|css)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=31536000"
        } ]
      }
    ]
  }
}
